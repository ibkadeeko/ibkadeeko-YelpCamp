<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>

        <div class="form">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment" required>
                <input class="form-control" type="text" name="comment[author]" placeholder="author" required>
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
    
        
            
        
    </div>
    
</div>


