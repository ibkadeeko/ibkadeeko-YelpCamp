<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>

        <div class="form">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>


